@using CampusEats.Web.Areas.RestaurantOwner.Models.Menu
@model EditMenuItemViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Edit Menu Item</h2>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ItemId" />
                        <input type="hidden" asp-for="RestaurantId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Item Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">฿</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Image</label>
                                <div>
                                    <img src="@Model.CurrentImageUrl" class="img-thumbnail"
                                         style="max-height: 200px;" alt="Current image" />
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="NewImage" class="form-label">Change Image</label>
                            <input asp-for="NewImage" class="form-control" type="file" accept="image/*" />
                            <div id="imagePreview" class="mt-2 d-none">
                                <img src="#" class="img-thumbnail" style="max-height: 200px;" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsAvailable" class="form-check-input" />
                                <label asp-for="IsAvailable" class="form-check-label">Available for order</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Menu
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Image preview
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                const preview = document.getElementById('imagePreview');
                const previewImg = preview.querySelector('img');

                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    preview.classList.remove('d-none');
                }

                reader.readAsDataURL(file);
            }
        });
    </script>
}