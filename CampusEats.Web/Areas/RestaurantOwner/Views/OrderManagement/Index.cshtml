@model CampusEats.Web.Areas.RestaurantOwner.Models.Orders.OrderManagementViewModel

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Today's Revenue</h5>
                    <h2 class="mb-0">฿@Model.TodayRevenue.ToString("N2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <h2 class="mb-0">@Model.TotalOrders</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Pending Orders</h5>
                    <h2 class="mb-0">@Model.PendingOrders</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Today's Orders</h5>
        </div>
        <div class="card-body">
            @if (!Model.Orders.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="mt-3">No orders found</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Time</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.OrderTime.ToString("HH:mm")</td>
                                    <td>
                                        @string.Join(", ", order.Items.Select(i => $"{i.Quantity}x {i.Name}"))
                                    </td>
                                    <td>฿@order.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <span class="badge @order.StatusBadgeClass">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>
                                        <!-- Add action buttons based on order status -->
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>